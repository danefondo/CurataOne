extends layout_buttonless

block content
	.sideNav
		.curataName #{curata.curataName}
		.curataSwitcher
			.currentCurataSwitch(id= curata.id) Switch Curata
			.drop-down__menu-box3.unsortable.drop-down-extra-width
				.curataSwitchHeader Switch current Curata
				if (user.defaultCurataId && curata.id == user.defaultCurataId)
					.defaultCurata Default Curata
				else
					.makeDefault Make default
				ul.drop-down__menu3
					each curata in curatas
						li.drop-down__item3.drop-down-extra-styling
							a.curata-link(href='/curatas/' + user.username + '/curatas/' + curata.id) #{curata.curataName}
		.goToAllCuratas
			a.allCuratasLink(href='/curatas/' + user.username + '/curatas') View all my Curatas
		//- if curata exists & selected, display 
		ul.sideNavButtons
			li.sideNavLinkContainer
				a.sidelink.size18.block(href='/curatas/' + user.username + '/curatas/' + curata.id) Curations
				a.sidelink.size18.block(href='/curatas/' + user.username + '/curatas/' + curata.id + '/templates') Templates
				a.sidelink.size18.block(href='/curatas/' + user.username + '/curatas/' + curata.id + '/files') Files
				a.sidelink.size18.block(href='/curatas/' + user.username + '/curatas/' + curata.id + '/appearance') Appearance
				a.sidelink.size18.block(href='/curatas/' + user.username + '/curatas/' + curata.id + '/collaborators') Collaborators
				a.sidelink.size18.block(href='/curatas/' + user.username + '/curatas/' + curata.id + '/settings') Settings
		a.viewCurataLive(target="_blank" href='/browse/users/' + user.username + '/curatas/' + curata.id) View live
	.curataContainer.sideNavMargin
		.curataPageTitle Settings
		.curataSettingsArea
			//- p Text is automatically saved
			.curataSettingsGroupTitle Change your Curata name
			.curataSettingsGroup
				.changeCurataNameArea
					if (curata.curataName)
						input.curataSettingsTitle(placeholder= "Your title" value= curata.curataName)
					else
						input.curataSettingsTitle(placeholder= "Your title")
			.curataSettingsGroupTitle Change your Curata description
			.curataSettingsGroup
				.curataSetting
					.changeCurataDescription
						if (curata.curataDescription)
							textarea.curataDescription(placeholder= 'What is this list about?') #{curata.curataDescription}
						else
							textarea.curataDescription(placeholder= 'What is this list about?')
			.curataSettingsGroupTitle Change Curata's membership status
			.curataSettingsGroup
				.curataSetting
					.changeCurataMembership
			.curataSettingsGroupTitle Add or change yours Curata address
			.curataSettingsGroup
				.curataSetting
					.changeCurataDomainArea
						if (curata.curataAddress && curata.curataAddress !== "no-address")
							.curataSettingsAddress.inline #{curata.curataAddress}
							.curataEnding.inline .curata.one
							.changeAddress Change address
						else
							.addAddress You don't have an address. Add address
						.getCustomDomainButton Add your own custom domain for $2.99/month
			.curataSettingsGroupTitle Change your Curata privacy settings
			.curataSettingsGroup
				.curataSetting
					.changeCurataPrivacyArea
						.changeCurataPrivacy Make Curata private
						.unlistCurata Unlist Curata from the Curata library
		.deleteCurataArea
			.deleteCurataText Deleting your Curata will permanently delete your Curata, all the lists inside it and irreversably delete all of its content from everywhere. The content of all the contributors is also removed unless their content ownership makes it not possible. If your Curata ownership policy does not enable you to delete the Curata, then vote must occur between multiple members.
			.deleteCurataButton
				p.deleteCurataButtonText Delete Curata