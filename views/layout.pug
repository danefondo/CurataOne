include images/profileIcon

doctype html
html
	head
		title Curata
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		link(rel='stylesheet' href='/css/reset.css')
		link(rel='stylesheet', href='/css/unreset.css')
		link(rel='stylesheet' href='/css/main.css')
		link(rel='stylesheet' href='/css/registration.css')
		link(rel='stylesheet' href='/css/navigation.css')
		link(rel='stylesheet' href='/css/MultiForm.css')
		link(rel='stylesheet' href='/css/spectrum.css')
		link(rel='stylesheet' href='/css/browse.css')
		link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/themes/smoothness/jquery-ui.css')
		script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')
		script(src='https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.js')
		script(src='https://cdn.ckeditor.com/ckeditor5/11.2.0/decoupled-document/ckeditor.js')
		script(src='https://momentjs.com/downloads/moment.min.js')
		link(rel='stylesheet' href='/css/ckeditor.css')
		link(rel='stylesheet' href='/css/responsive.css')

	body
		- var coreURL = 'dashboard';
		if !user
			.landing-nav
				.title-container
					a.logoTitleBlack__generic(href='/') Curata
				a.loginPageLink(href='/accounts/loginForm') Login
				a.signUpLinkSimple(href='/accounts/registerForm') Sign up
		else if user
			.nav-container
				.title-container
					a.title-btn(href='/') Curata
			if user
				.navlinks-container
					// show menu items based on what the user has (used) and their settings
					if (user.defaultCurataId && user.defaultCurataId !== "N/A")
						a.dashboardBtn.topNavigationLink__topBar(href='/' + coreURL + '/curatas/' + user.defaultCurataId) Dashboard
					else 
						a.topNavigationLink__topBar(href='/' + coreURL + '/curatas') Dashboard
					a.topNavigationLink__topBar(href='/browse') Browse
					a.topNavigationLink__topBar(href='/library') Library
				.logout-container
					//- #create.drop-down
					//- 	#create-button.dropDown.drop-down__button.unsortable
					//- 		a.navlink + Create
					//- 	.drop-down__menu-box.unsortable
					//- 		ul.drop-down__menu
					//- 			li.drop-down__item.DeleteComponent(data-name="delete") Delete
					//- 			li.drop-down__item Settings
					//- 			li.drop-down__item Add label
					//- 			li.drop-down__item Mark as
					//- 			li.drop-down__item Move to
					.DropdownX.modifiedSize
						.CurateNew.modifiedStyle
							span.Name + Curate
						nav.Dropdown-nav.modifiedDropdown
							ul.Dropdown-group
								li
									a.entypo-newspaper.NavLinkX.Upgrade(href='/create') New entry
								li
									a.entypo-docs.NavLinkX(href='#') New list
								li
									a.entypo-docs.NavLinkX(href='#') New Curata
					a.navlink(href='/' + coreURL + '/curatas') My Curatas
					.DropdownX
						.Dropdown-profile
							//- img.Photo(src='//s3-us-west-2.amazonaws.com/s.cdpn.io/33381/profile/profile-80.jpg?1')
							.Photo
								+profileIcon
							//- img.Photo(src='https://img.icons8.com/pastel-glyph/64/ffffff/gender-neutral-user.png')
							span.Name.userId(id= user.id, data-username= user.id) #{user.firstname}
							span.MenuIcon
								span.MenuIcon-line
								span.MenuIcon-line
								span.MenuIcon-line
						nav.Dropdown-nav.SettingsNav
							ul.Dropdown-group
								li
									a.entypo-newspaper.NavLinkX(href= '/' + coreURL + '/curatas') View all my Curatas
									a.entypo-plus.OptionLink(href='#')
								li
									a.entypo-newspaper.NavLinkX(href='#') Profile
								li
									a.entypo-docs.NavLinkX.Upgrade(href='#') Upgrade
									a.entypo-plus.OptionLink(href='#')
								li
									a.entypo-archive.NavLinkX(href='#') Account settings
									a.entypo-plus.OptionLink(href='#')
								li
									a.entypo-logout.NavLinkX(href='/accounts/logout') Logout
		block heading
		if !user
			.container
				.registration-block
					.title__landingPage
						.landingTitleP1 Curate
						.landingTitleP2 anything.
						.landingSubtitle The best tools to create organized and structured information hubs.
					a.signupPageLink(href='/accounts/registerForm') sign up
					//- img.imageBlockX(src='/images/pablo-sign-in.png')
				.examplesSection__landingPage
					.examplesContainer__landingPage
						.examplesTitle__landingPage Examples
		else 
			.container
				block content
				.so-good-container
					//- span.so-good Be phenomenal, everything depends on it.
					span.so-good Let's put an end to information pollution.
			block scripts
			script(src='/js/main.js')
			script(src='/js/MultiForm.js')
			script(src='/js/topbar__dropdown.js')



