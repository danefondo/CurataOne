extends layout_buttonless

block content
	- var coreURL = 'dashboard';
	.sideNav
		.curataSwitcher
			.currentCurataSwitch(id= curata.id) Switch Space
			.drop-down__menu-box3.unsortable.drop-down-extra-width
				.curataSwitchHeader Switch current Space
				if (user.defaultCurataId && curata.id == user.defaultCurataId)
					.defaultCurata Default Space
				else
					.makeDefault Make default
				ul.drop-down__menu3
					each space in curatas
						if (space.id !== curata.id)
							li.drop-down__item3.drop-down-extra-styling
								a.curata-link(href='/' + coreURL + '/' + user.username + '/curatas/' + space.id) #{space.curataName}
		a.curataName(href= '/' + coreURL + '/' + user.username + '/curatas/' + curata.id) #{curata.curataName}
		.goToAllCuratas
			a.allCuratasLink(href= '/' + coreURL + '/' + user.username + '/curatas') View all my Spaces
		//- if curata exists & selected, display 
		a.viewCurataLive(target="_blank" href= '/browse/users/' + user.username + '/curatas/' + curata.id) View live
		ul.sideNavButtons
			li.sideNavLinkContainer
				a.sidelink.size18.block(href='/' + coreURL + '/' + user.username + '/curatas/' + curata.id) Space
				a.sidelink.size18.block(href= '/' + coreURL + '/' + user.username + '/curatas/' + curata.id + '/entries') Entries
				a.sidelink.size18.block(href= '/' + coreURL + '/' + user.username + '/curatas/' + curata.id + '/appearance') Appearance
				a.sidelink.size18.block(href= '/' + coreURL + '/' + user.username + '/curatas/' + curata.id + '/settings') Settings
	.curataContainer.sideNavMargin
		.curataPageTitle Appearance
		.majorSettingGroup
			.majorSettingGroupTitle Header
			.subSettingGroup
				p.subSettingGroupTitle Position
				.settingBox.inline
					p Left
				.settingBox.inline
					p Centre
				.settingBox.inline
					p Right
			.settingGroup
				.settingGroupTitle Title 
				.subSettingGroup
					p.subSettingGroupTitle Color
					input.custom(type="text")
				.subSettingGroup
					p.subSettingGroupTitle Font-size
					.tinySettingBox.inline
						p H1
					.tinySettingBox.inline
						p H2
					.tinySettingBox.inline
						p H3
				.subSettingGroup
					p.subSettingGroupTitle Font
					select.fontSelectGroup.inline
						option(disabled selected=true) Choose a font
						option(value= "Ubuntu") Ubuntu
						option(value= "Lobster") Lobster
						option(value= "Open Sans") Open Sans
						option(value= "Roboto") Roboto
						option(value= "Raleway") Raleway
						option(value= "Roboto Slab") Roboto Slab
						option(value= "Varela Round") Varela Round
						option(value= "Nunito") Nunito
					.fontTestGroup.inline
						p.fontTest This is what your text would look like.
				.subSettingGroup
					p.subSettingGroupTitle Background
			.settingGroup
				.settingGroupTitle Description 
				.subSettingGroup
					p.subSettingGroupTitle Color
					input.custom(type="text")
				.subSettingGroup
					p.subSettingGroupTitle Font-size
					.tinySettingBox.inline
						p H1
					.tinySettingBox.inline
						p H2
					.tinySettingBox.inline
						p H3
				.subSettingGroup
					p.subSettingGroupTitle Font
					select.fontSelectGroup.inline
						option(disabled selected=true) Choose a font
						option(value= "Ubuntu") Ubuntu
						option(value= "Lobster") Lobster
						option(value= "Open Sans") Open Sans
						option(value= "Roboto") Roboto
						option(value= "Raleway") Raleway
						option(value= "Roboto Slab") Roboto Slab
						option(value= "Varela Round") Varela Round
						option(value= "Nunito") Nunito
					.fontTestGroup.inline
						p.fontTest This is what your text would look like.
				.subSettingGroup
					p.subSettingGroupTitle Background
block scripts
	script(src='/js/spectrum.js')
	script(src='/js/settings-scripts.js')