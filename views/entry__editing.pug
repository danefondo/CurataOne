//- bring in 'Page Key' & 'Page Overview' kind of like... Stackoverflow's report
block heading
	- var coreURL = 'dashboard';
	.helperNavigation
		.topnav-container
			a.goBack.navlink(href= '/' + coreURL + '/curatas/' + entry.curataId + '/lists/' + entry.curataListId) &larr;
			.entryMetaTitle Editing entry
			.statusMessage.inline
			if (entry.entryState == "Trashed")
				span.inTrash This entry is in the trash. Click 'Untrash' to restore entry.
			if (entry.entryState !== "Trashed")
				.floatRight
					//- a.navlink(href='/my-curations') &#63;
					.settingsButton.inline
						+SettingsIcon
					a.showPreview.inline(href= '/' + coreURL + '/drafts/' + entry.id, target= '_blank') Preview
					if (entry.entryState == "Draft") 
						.publishEntry.inline Publish
					if (entry.entryState == "Published")
						a.viewLive(target= "_blank" href= '/browse/users/' + user.id + '/curatas/' + entry.curataId + '/lists/' + entry.curataListId + '/entries/' + entry.id) View live
			else
				.floatUntrash
					.untrashEntry.buttonGrey.inline
						+TrashIcon
						span Untrash
block content
	- var coreURL = 'dashboard';
	.curataId(id= entry.curataId)
	.listId(data-listId= entry.curataListId)
	.emptyModal
		.modalBackground
		.deleteModal
			.content-wrapper
				.msg-title Are you sure you want to move this entry to the trash?
				.action-group
					.cancelTrashEntry.button-outline CANCEL
					.confirmTrashEntry.button-filled TRASH
	if (entry.entryState !== "Trashed")
		.settingsSideNav
			.entrySettingsHeader
				span Entry Settings
				.closeEntrySettings.inline X
			.entrySettingsContent
				.entrySettingsBlock
					.entryState(data-entryState= entry.entryState) Status: #{entry.entryState}
				if (entry.entryState == "Published")
					.entrySettingsBlock
						.makeDraft Revert to draft
				//- .entrySettingsBlock
				//- 	a.editTemplate.whiteButton(href= '/' + coreURL + '/curatas/' + entry.curataId + '/lists/' + entry.curataListId + '/entries/' + entry.id + '/template/' + entry.linkedTemplateId) Edit template
			.entrySettingsDelete
				.entrySettingsBlock
					if (entry.entryState !== "Trashed")
						.trashEntry.buttonGrey.inline
							+TrashIcon
							span Move to trash
					else
						.untrashEntry.buttonGrey.inline
							+TrashIcon
							span Untrash
				//- Settings enables turning on/off whether description, image, link, other is displayed in the final outcome
	//- if (!entry) scenario
	if (entry.entryState !== "Trashed")
		.sectionArea.recalculatedWidth
			.TemplateHolder(id= entry.id)
				+entryForm(curata, entry)
				
	else
		.sectionArea
			.TemplateHolder(id= entry.id)
				.entryDetails
					.entryComponentTitle Title
					.entryDetailsGroup
						if (entry.entryTitle)
							.EntryTitle #{entry.entryTitle}
						else
							.EntryTitle Untitled
					.entryComponentTitle Description
					.entryDetailsGroup
						.mainEditor
							textarea.postDescription(maxlength="100" placeholder="Write a short summary of less than 100 characters.") !{entry.entryText}
							//- .editorTools.unreset(id= "toolbar_" +entry.id)
							//- if (entry.entryText)
							//- 	.editorText.unreset(id= "editor_" +entry.id) !{entry.entryText}
							//- else
							//- 	.editorText.unreset(id= "editor_" +entry.id)
							//- 		p Write something here...
					.entryComponentTitle Link
					.entryDetailsGroup
						.linkContainer
							if (entry.entryLink)
								a.EntryLink(href= entry.entryLink target="_blank") #{entry.entryLink}
								.removeLink Remove link
							else
								.addEntryLink + Add link
					.entryComponentTitle Image
					.entryDetailsGroup
						.mainImage(id= "imageArea_" +entry.id)
							if (entry.entryImageURL)
								.imageBlock(data-type= "mainImage" data-image-key= entry.entryImageKey style='background-image: url(' + entry.entryImageURL + ');')
									.deleteMainImage x
									form.imageForm(action= "/' + coreURL + '/UploadSingleImage" method="POST" enctype= "multipart/form-data")
										label.uploadFile
											input.ImageInput(type= 'file' name= 'image' accept= 'image/*')
							else 
								.imageBlock(data-type= "mainImage")
									form.imageForm(action= "/' + coreURL + '/UploadSingleImage" method="POST" enctype= "multipart/form-data")
										label.uploadFile
											input.ImageInput(type= 'file' name= 'image' accept= 'image/*')



